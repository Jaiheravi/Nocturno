{
  "$schema": "vscode://schemas/color-theme",
	"name": "Nocturno",
	"type": "dark",
	"colors": {
    // Base colors
    "icon.foreground": "#6b6b6b",
    "foreground":"#acacac",
    "focusBorder": "#ffffff00",

    // Git
    "gitDecoration.ignoredResourceForeground": "#3d3d3d",

    // Editor
    "editor.background": "#13151d",
    "editor.foreground": "#acacac",
    "editorCursor.foreground": "#e4e4e4",
    "editor.selectionHighlightBackground": "#ffffff05",
    "editor.selectionBackground": "#202538",
    "editor.findMatchBackground": "#ffffff15",
    "editor.findMatchHighlightBackground": "#ffffff0a",
    "editor.findMatchHighlightBorder": "#ffffff30",
    "editor.wordHighlightBackground": "#23293f60",
    "editor.wordHighlightStrongBackground": "#23293f60",

    // Peek view
    "peekView.border": "#1c1f2a",
    "peekViewTitle.background": "#1c1f2a",
    "peekViewTitleLabel.foreground": "#565b6f",
    "peekViewTitleDescription.foreground": "#30333f",

    // Breadcrumbs colors
    "breadcrumb.foreground": "#414141",

    // Line highlight
		"editor.lineHighlightBorder": "#00000000",
    "editor.lineHighlightBackground": "#ffffff06",
    "editor.rangeHighlightBackground": "#ffffff06",

    // Line numbers
    "editorLineNumber.foreground": "#ffffff10",
    "editorLineNumber.activeForeground": "#ffffff50",

    // Editor hints
    "editorHint.foreground": "#494949",

    // Sidebar
    "sideBar.background": "#13151d",
    "sideBar.foreground": "#444857",
    "sideBar.border": "#00000000",

    // Sections in the sidebar
    "sideBarSectionHeader.background": "#00000000",
    "sideBarSectionHeader.foreground": "#ffffff40",
    "sideBarSectionHeader.border": "#00000000",

    // Activity bar (Bar with icons at the left side)
		"activityBar.background": "#13151d",
    "activityBar.foreground": "#444857",
    "activityBar.border": "#00000000",
		"activityBar.inactiveForeground": "#ffffff15",
		"activityBarBadge.background": "#444857",
		"activityBarBadge.foreground": "#ffffffff",

    // Title bar
    "titleBar.activeBackground": "#13151d",
		"titleBar.activeForeground": "#7b7b81",
		"titleBar.inactiveBackground": "#13151d",
    "titleBar.inactiveForeground": "#46464f",
    "titleBar.border": "#00000000",

    // Editor Groups & Tabs
    "editorGroup.border": "#ffffff00",
    "editorGroupHeader.tabsBackground": "#13151d",
    "tab.activeBackground": "#ffffff04",
    "tab.activeForeground": "#ffffff30",
    "tab.inactiveBackground": "#ffffff00",
    "tab.inactiveForeground": "#ffffff40",
    "tab.unfocusedActiveForeground": "#ffffff40",
    "tab.border": "#00000000",

    // Lists and trees
    "list.hoverBackground": "#00000010",
		"list.hoverForeground": "#afafb6",
		"list.activeSelectionBackground": "#ffffff0a",
		"list.activeSelectionForeground": "#afafb6",
    "list.inactiveSelectionBackground": "#ffffff0a",
    "list.inactiveSelectionForeground": "#afafb6",
    "list.focusBackground": "#ffffff09",
    "list.focusForeground": "#7da1d8",
    "list.errorForeground": "#dd6555",
    "tree.indentGuidesStroke": "#ffffff09",

    // Menu Bar colors
    "menubar.selectionBackground": "#00000050",
    "menubar.selectionForeground": "#ffffffbb",
    "menu.background": "#151418",
    "menu.selectionBackground": "#00000050",
    "menu.selectionForeground": "#ffffffbb",
    "menu.border": "#00000000",
    "menu.separatorBackground": "#ffffff20",
    "menu.selectionBorder": "#00000000",

    // Editor widget colors
    "widget.shadow": "#00000030",
    "editorWidget.border": "#00000030",
    "editorHoverWidget.background": "#161618",
    "editorHoverWidget.border": "#00000020",
    "editorWidget.background": "#161618",
    "editorWidget.foreground": "#ffffff80",
    "editorSuggestWidget.highlightForeground": "#b6b6b6",
    "editorSuggestWidget.foreground": "#838383",
    "editorSuggestWidget.selectedBackground": "#25242b",
    "editorSuggestWidget.border": "#00000000",

    // Input control
    "input.background": "#00000040",
    "input.foreground": "#ffffff80",
    "input.placeholderForeground": "#ffffff40",

    // Dropdown control
    "dropdown.background": "#00000020",
		"dropdown.foreground": "#ffffff80",
    "dropdown.listBackground": "#00000020",
    "dropdown.border": "#00000010",

    // Status bar
    "statusBar.background": "#13151d",
    "statusBar.foreground": "#ffffff20",
    "statusBar.debuggingForeground": "#ffffffcc",
    "statusBar.debuggingBackground": "#a95c3d",
    "statusBar.noFolderForeground": "#ffffffcc",

    // Terminal
    "terminal.foreground": "#7d8296",
    "terminal.ansiRed": "#ccb984",
    "terminal.ansiBrightRed": "#ccb984",
    "terminal.ansiBlue": "#71aac3",
    "terminal.ansiBrightBlue": "#71aac3",
    "terminal.ansiBrightGreen": "#7EA16B",
    "terminal.ansiGreen": "#7EA16B",
    "terminal.ansiCyan": "#c483d8",
    "terminal.ansiBrightCyan": "#c483d8",

		"panel.border": "#00000010",
		"panelTitle.activeForeground": "#848489",
		"panelTitle.inactiveForeground": "#5b5b62",
    "button.background": "#7da1d8",
    "button.foreground": "#000000c7",
		"editorIndentGuide.background": "#ffffff07",
    "editorIndentGuide.activeBackground": "#ffffff15",
    "editorRuler.foreground": "#ffffff07",
    "editorGutter.addedBackground": "#36a577",
    "editorGutter.modifiedBackground": "#5991c9",
    "minimap.errorHighlight": "#c46800",
    "editorError.foreground": "#a01616b4",
    "scrollbar.shadow": "#00000025"
	},
	"tokenColors": [
    {
      "name": "Gray",
      "scope": [
        "punctuation",
        "meta.brace",
        "constant.name.attribute.tag.pug",
        "attribute_value",
        "meta.tag.other",
        "string.interpolated",
        "constant.character.escape",
        "comment.line.double-slash",
        "punctuation.definition.string.template",
        "keyword.operator.assignment"
      ],
      "settings": {
        "foreground": "#30333f"
      }
    },
    {
      "name": "Gray - Italic",
      "scope": [
        "comment",
        "string.comment",
        "punctuation.definition.comment",
        "variable.parameter",
        "meta.function.stylus"
      ],
      "settings": {
        "foreground": "#30333f",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Blue",
      "scope": [
        "meta.definition.variable",
        "variable.other",
        "variable",
        "support.variable.object",
        "support.class",
        "entity.name.tag",
        "meta.function",
        "support.function",
        "meta.list",
        "entity.name.constant",
        "variable.parameter",
        "support.type.property-name.json",
        "support.type.property-name.css",
      ],
      "settings": {
        "foreground": "#b18583",
      }
    },
    {
      "name": "Blue - Italic",
      "scope": [
        "variable.parameter"
      ],
      "settings": {
        "foreground": "#b18583",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Orange",
      "scope": [
        "constant.numeric",
        "string.quoted",
        "string.template",
        "entity.name.label",
        "constant.other.color.rgb-value",
        "meta.property-value",
        "storage.type.function.arrow",
        "string.regexp",
        "constant.language",
        "support.variable.property.process"
      ],
      "settings": {
        "foreground": "#71aac3",
      }
    },
    {
      "name": "Green",
      "scope": [
        "storage.type",
        "keyword.control",
        "storage.modifier",
        "entity.other.attribute-name.tag",
        "entity.name.tag.css",
        "entity.other.attribute-name.pseudo-element",
        "meta.selector",
        "meta.attribute-selector",
        "storage.struct.racket",
        "entity.other.attribute-name.html",
        "keyword.operator",
      ],
      "settings": {
        "foreground": "#7EA16B",
      }
    },
    {
      "name": "Yellow",
      "scope": [
        "meta.function-call",
        "entity.name.function",
        "support.function.construct.output",
        "entity.other.attribute-name.class",
        "entity.other.attribute-name.id",
        "entity.other.attribute-name.pseudo-class",
        "keyword.other.unit",
        "meta.definition.function",
        "support.variable.property",
        "support.type.primitive",
        "keyword.hdl",
        "entity.other.attribute-name.placeholder.css"
      ],
      "settings": {
        "foreground": "#ccb984",
      }
    },
    {
      "name": "Purple",
      "scope": [
        "support.function.process",
        "support.function.console",
        "meta.tag.sgml.doctype",
        "keyword.other.racket",
        "variable.other.property",
        "constant.other.placeholder",
        "entity.other.inherited-class",
        "entity.name.type.module",
        "entity.name.type",
        "support.type.object.module",
        "keyword.other.important.css",
        "meta.object-literal.key.js",
        "meta.tag.attributes"
      ],
      "settings": {
        "foreground": "#c483d8",
      }
    },
    {
      "name": "Red - Italic",
      "scope": [
        "keyword.other.important.css"
      ],
      "settings": {
        "foreground": "#db6262",
        "fontStyle": "italic"
      }
    }
  ]
}
